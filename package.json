{
  "name": "wellcare-freshcare-portal",
  "version": "1.0.0",
  "description": "Front-end asset pipeline for the WellCare / FreshCare health portal.",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel dev:sass dev:js",
    "dev:sass": "sass --watch resources/scss/app.scss public/assets/css/app.css",
    "dev:js": "esbuild resources/js/app.js --bundle --sourcemap --format=esm --outfile=public/assets/js/app.js --watch",
    "build": "npm-run-all build:sass build:js",
    "build:sass": "sass resources/scss/app.scss public/assets/css/app.css --style=compressed",
    "build:js": "esbuild resources/js/app.js --bundle --sourcemap --minify --format=esm --outfile=public/assets/js/app.js",
    "visual:test": "cypress run --config-file tests/visual/cypress.config.js",
    "visual:percy": "percy exec -- cypress run --config-file tests/visual/cypress.config.js"
  },
  "devDependencies": {
    "@percy/cli": "^1.28.4",
    "cypress": "^13.13.1",
    "esbuild": "^0.21.5",
    "npm-run-all": "^4.1.5",
    "sass": "^1.77.0"
  },
  "dependencies": {
    "datatables.net": "^2.3.4",
    "datatables.net-bs5": "^2.3.4",
    "flatpickr": "^4.6.13",
    "jquery": "^3.7.1"
  }
}
